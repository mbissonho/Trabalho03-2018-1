<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.iff.pooa20181.trabalho03_2018_1">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Config"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MecanicoListActivity"
            android:label="@string/title_activity_mecanico_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.OficinaListActivity"
            android:label="OficinaListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.ManageMecanicoActivity"
            android:label="ManageMecanicoActivity" />
        <activity android:name=".view.ManageOficinaActivity" />
        <activity android:name=".view.ViewMecanicoActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".view.ViewOficinaActivity"></activity>
    </application>

</manifest>